{
  "name": "javbus-api",
  "version": "2.0.0",
  "description": "JavBus API",
  "main": "index.js",
  "homepage": "https://github.com/ovnrain/javbus-api#readme",
  "scripts": {
    "start": "node -r dotenv/config dist/server.js",
    "dev": "tsx watch --clear-screen=false -r dotenv/config src/server.ts",
    "build": "npm run lint && tsc",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint --config .eslintrc.commit.json src/**/*.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "javbus",
    "api"
  ],
  "author": {
    "name": "ovnrain",
    "email": "ovnrain@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ovnrain/javbus-api.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/esm": "^1.0.3",
    "@tsconfig/node18": "^2.0.0",
    "@tsconfig/strictest": "^2.0.1",
    "@types/bytes": "^3.1.1",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.1",
    "@types/node": "^18.16.3",
    "@types/probe-image-size": "^7.2.0",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "bytes": "^3.1.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "got": "^12.6.0",
    "http-errors": "^2.0.0",
    "node-html-parser": "^6.1.5",
    "probe-image-size": "^7.2.3",
    "qs": "^6.11.1"
  },
  "type": "module"
}
